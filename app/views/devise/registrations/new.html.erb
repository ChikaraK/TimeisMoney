<div class="container">
  <div class="row">
    <div class="col-4"></div>
    <div class="col-4 mt-5 mb-5">
      <div class="card text-center bg-light" style="width: 100%;">
        <h2>ユーザー登録</h2>
          <div class="form-group">
            <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
              <%= devise_error_messages! %>

              <div class="field">
                <div class="box">
                <%= f.text_field :name, autofocus: true, placeholder: "名前",class:"form-control"%>
                </div>
              </div>

              <div class="field">
                <div class="box">
                <%= f.text_field :employee_code, autofocus: true, placeholder: "社員番号",class:"name form-control"%>
                </div>
              </div>

              <div class="field">
                <div class="box">
                <%= f.password_field :password, autocomplete: "off", placeholder: "パスワード",class:"password form-control"%>
                </div>
              </div>

              <div class="field">
                <div class="box">
                <%= f.password_field :password_confirmation, autocomplete: "off",placeholder:"パスワード確認",class:"password_confirm form-control"%>
                </div>
              </div>
              <br>
              <div class="actions">
                <%= f.submit "登録",class:"btn btn-primary" %>
              </div>
            <% end %>
          </div>
        </div>
      </div>
      <div class="col-4"></div>
  </div>
</div>