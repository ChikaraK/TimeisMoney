<div class="container">
  <h2>ユーザー登録</h2>

  <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <%= devise_error_messages! %>

    <div class="field">
      <%= f.text_field :name, autofocus: true, placeholder: "名前",class:""%>
    </div>

    <div class="field">
      <%= f.text_field :employee_code, autofocus: true, placeholder: "社員番号",class:"name"%>
    </div>

    <div class="field">
      <%= f.password_field :password, autocomplete: "off", placeholder: "パスワード",class:"password"%>
    </div>

    <div class="field">
      <%= f.password_field :password_confirmation, autocomplete: "off",placeholder:"パスワード確認",class:"password_confirm"%>
    </div>
    <br>
    <div class="actions">
      <%= f.submit "登録",class:"btn btn-primary" %>
    </div>
  <% end %>
</div>